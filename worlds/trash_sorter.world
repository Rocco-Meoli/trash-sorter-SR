    <!-- ===================== -->
    <!-- OVERHEAD CAMERA (ROS) -->
    <!-- ===================== -->
    <model name="overhead_camera">
      <static>true</static>

      <!-- Prima era 1.60 (sopra il tavolo). Ora senza tavolo: 1.20 -->
      <pose>0.60 0.0 1.20 0 1.57079632679 3.14159265359</pose>

      <link name="link">

        <visual name="overhead_cam_body">
          <geometry>
            <box><size>0.06 0.06 0.06</size></box>
          </geometry>
          <material>
            <ambient>1 0 0 1</ambient>
            <diffuse>1 0 0 1</diffuse>
          </material>
        </visual>

        <sensor name="overhead_sensor" type="camera">
          <always_on>true</always_on>
          <update_rate>30</update_rate>
          <visualize>true</visualize>

          <camera>
            <horizontal_fov>1.047</horizontal_fov>
            <image>
              <width>640</width>
              <height>480</height>
              <format>R8G8B8</format>
            </image>
            <clip>
              <near>0.05</near>
              <far>10</far>
            </clip>
          </camera>

          <plugin name="gazebo_ros_camera" filename="libgazebo_ros_camera.so">
            <robotNamespace>/</robotNamespace>
            <cameraName>overhead_camera</cameraName>
            <imageTopicName>image_raw</imageTopicName>
            <cameraInfoTopicName>camera_info</cameraInfoTopicName>
            <frameName>overhead_camera_link</frameName>

            <hackBaseline>0.07</hackBaseline>
            <distortionK1>0.0</distortionK1>
            <distortionK2>0.0</distortionK2>
            <distortionK3>0.0</distortionK3>
            <distortionT1>0.0</distortionT1>
            <distortionT2>0.0</distortionT2>
          </plugin>
        </sensor>

      </link>
    </model>

