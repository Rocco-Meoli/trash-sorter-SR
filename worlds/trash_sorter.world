    <!-- Plugin per gazebo_ros_link_attacher -->
    <plugin name="link_attacher_plugin" filename="libgazebo_ros_link_attacher.so"/>

    <!-- Basic world -->
    <include>
      <uri>model://sun</uri>
    </include>
    <include>
      <uri>model://ground_plane</uri>
    </include>

